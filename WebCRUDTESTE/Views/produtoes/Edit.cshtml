@model WebCRUDTESTE.Models.produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>produto</h4>
<hr />
<div class="d-flex flex-row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="DscProduto" class="control-label"></label>
                <input asp-for="DscProduto" class="form-control" />
                <span asp-validation-for="DscProduto" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="VlrUnitario" class="control-label"></label>
                <input asp-for="VlrUnitario" class="form-control" />
                <span asp-validation-for="VlrUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
 
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
