@model WebCRUDTESTE.Models.produto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>produto</h4>
<hr />
<div class="d-flex justify-content-between">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DscProduto" class="control-label"></label>
                <input asp-for="DscProduto" class="form-control" />
                <span asp-validation-for="DscProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VlrUnitario" class="control-label"></label>
                <input asp-for="VlrUnitario" class="form-control" />
                <span asp-validation-for="VlrUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div> 
        </form>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
