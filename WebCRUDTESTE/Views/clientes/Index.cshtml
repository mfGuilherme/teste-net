@model IEnumerable<WebCRUDTESTE.Models.cliente>

@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript">
    $(document).ready(function () {
    $('#clientetb').DataTable();
});
</script>

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-striped table-bordered dt-responsive nowrap" id="clientetb">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NmCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NmCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId"class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ClienteId"class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
